@model List<ClienteModel>
@{
    ViewData["Title"] = "Lista de Clientes";
}

<a role="button" asp-controller="Cliente" asp-action="Criar" class="btn btn-primary btn-block"> Adicionar Novo Cliente </a>

<div class="container text-center container-menu mt-3">
    <h1>Lista de Clientes</h1>
</div>


<table class="table mt-2 bg-table">
  <thead class="thead-light">
    <tr>
      <th class="text-center" scope="col">#</th>
      <th class="text-center" scope="col">Nome</th>
      <th class="text-center" scope="col">E-mail</th>
      <th class="text-center" scope="col">CPF/CNPJ</th>
      <th class="text-center" scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
        @if(Model != null && Model.Any())
        {
            foreach(ClienteModel cliente in Model)
            {
            <tr>
              <th class="text-center" scope="row">@cliente.Id</th>
                  <td class="text-center">@cliente.Nome</td>
                  <td class="text-center">@cliente.Email</td>
                  <td class="text-center">@cliente.CPF_CNPJ</td>

              <td class="text-center">
              <div class="btn-group">
                 <a role="button" class="btn btn-primary" asp-route-id="@cliente.Id" asp-action="Editar" asp-controller="Cliente">Editar</a>              
                  <a role="button" class="btn btn-dark" asp-route-id="@cliente.Id" asp-action="ApagarConfirmacao" asp-controller="Cliente">Apagar</a>
             </div>
              </td>
            </tr>  
            }
        } 
  </tbody>
</table>